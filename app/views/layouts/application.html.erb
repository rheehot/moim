<!DOCTYPE html>
<html>
  <head>
    <%= render "layouts/rails_default" %>
    <title><%= full_title(yield(:title)) %></title>
    <%= render "layouts/shim" %>
  </head>
  <body class="container">
    <%= render "layouts/header" %>
    <div class="main">
      <%= render 'layouts/flash' %>
