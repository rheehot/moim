<a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button"
  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
  notification
  <span class="badge badge-warning badge-pill"><%= current_user.friend_requests.count %></span>
</a>
<ul class="dropdown-menu p-0 rounded-0" aria-labelledby="navbarDropdown">
  <% current_user.friend_requests.each do |user| %>
    <%= link_to users_path(type: 'find_friends', anchor: "user-#{ user.id }") do %>
      <li class="friend-request-notification py-3">
          <strong><%= user.name %></strong>
          sent you a friend request that you haven't responded to yet
      </li>
    <% end %>
  <% end %>
</ul>
