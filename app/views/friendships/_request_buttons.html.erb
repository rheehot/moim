<% if !current_user.friend?(friend) %>
  <% if current_user.friend_requests.include? friend %>
    <%= render 'friendships/accept_friend', friend: friend %>
  <% elsif current_user.pending_friends.include? friend %>
    <%= content_tag(:div, I18n.t('customs.buttons.pending_friend'), class: "btn btn-success disabled") %>
  <% else %>
    <%= render 'friendships/request_friend', friend: friend %>
  <% end %>
<% elsif current_user.friend?(friend) %>
  <%= render 'friendships/unfriend', friend: friend %>
<% end %>
