<%= form_for(@comment, html: { class: "write-comment d-sm-flex" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: f.object %>
  <%= f.hidden_field :post_id, :value => @post.id %>
  <%= content_tag(:div, profile_img_for(current_user), class: "float-left") %>
<div class="field w-100">
  <%= f.text_area :content, placeholder: I18n.t('customs.comments.placeholder') %>
</div>
  <%= f.submit I18n.t('customs.buttons.submit'), class: "btn btn-success post-submit flex-shrink-1" %>
<% end %>

<script>
$(document).click(function() {
  $('.write-comment').on( 'keyup', 'textarea', function (e){
    $(this).css('height', 'auto' );
    $(this).height( this.scrollHeight );
  });
  $('.write-comment').find( 'textarea' ).keyup();
});
</script>
