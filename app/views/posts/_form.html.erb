<%= form_for(@post, html: { class: "w-100" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: f.object %>
  <div class="field write-post">
    <%= f.text_area :content, placeholder: I18n.t('customs.posts.placeholder') %>
  </div>
  <%= f.submit I18n.t('customs.buttons.submit'), class: "btn btn-success w-100" %>
<% end %>

<script>
$(document).click(function() {
  $('.write-post').on( 'keyup', 'textarea', function (e){
    $(this).css('height', 'auto' );
    $(this).height( this.scrollHeight );
  });
  $('.write-post').find( 'textarea' ).keyup();
});
</script>
