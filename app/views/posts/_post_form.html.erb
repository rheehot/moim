<% if current_user? @user %>
  <%= form_for(@post) do |f| %>
    <%= render "devise/shared/error_messages", resource: f.object %>
    <div class="field write-post">
      <%= f.text_area :content, placeholder: "What's on your mind?" %>
    </div>
    <%= f.submit "Submit", class: "btn btn-success w-100" %>
  <% end %>
<% end %>
