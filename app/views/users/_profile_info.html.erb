<section class="profile-info
  d-sm-flex justify-content-around d-md-block">
  <h6 class="h-title h-auto d-flex align-items-center">
    <%= profile_img_for @user %>
    <span class="ml-3"><%= @user.name.full %></span>
  </h6>
  <% if current_user? @user %>
    <%= link_to I18n.t('customs.buttons.edit_user_info'),
      edit_user_registration_path, class: "btn btn-md btn-success" %>
  <% else %>
    <%= render 'friendship_buttons', user: @user %>
  <% end %>
</section>
