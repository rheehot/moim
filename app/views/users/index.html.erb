<% @user ||= current_user %>
<% provide(:title, I18n.t("customs.titles.#{@friends.keys.last}", name: @user.name.possessive)) %>
<div class="users">
  <% @friends.each do |friend_type, friend_group| %>
  <section class="list-style-none <%=friend_type%>" id=<%= friend_type %>>
    <% if friend_type == :friend_requests %>
      <%= link_to "view sent requests (#{current_user.pending_friends.count})",
        users_path(type: 'pending_friends'), class: "ml-5" %>
    <% end %>
    <h6 class="mt-4 h-title">
      <%= I18n.t("customs.titles.#{friend_type}", name: @user.name.possessive) %>
    </h6>
    <ol>
      <%= render friend_group %>
    </ol>
    <%= will_paginate friend_group %>
  </section>
  <% end %>
</div>
