<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3">
    <%= render "profile_info" %>
    <%= content_tag(:div, "(friends count: 9, temp)", class: "friends") %>
  </aside>
  <div class="col-md-9">
    <% if current_user? @user %>
      <%= render "posts/post_form" %>
    <% end %>
    <%= render "post_list" %>
  </div>
</div>
